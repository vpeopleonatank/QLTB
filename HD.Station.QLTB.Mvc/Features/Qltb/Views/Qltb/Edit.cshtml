@using HD.Station.Qltb.Abstractions.Data;
@model HD.Station.Qltb.Abstractions.DTO.ThietbiDTO
@{
    ViewData["Title"] = "Sua";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Ten thiet bi: 
                <input asp-for="Tentb" class="form-control" />
                <span asp-validation-for="Tentb" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nuoc san xuat: 
                <input asp-for="Nuocsx" class="form-control" />
                <span asp-validation-for="Nuocsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tendv" class="control-label"></label>
                <select asp-for="Madv" class="form-control">
                    <option value="">-- Chon Don vi --</option>
                    @{
                        List<Donvi> donvis = ViewBag.DonviLoaithietbiVM.Donvis;
                        foreach (var donvi in donvis)
                        {
                            <option value="@donvi.Madv">@donvi.Tendv</option>
                        }
                    }
                </select>
                <span asp-validation-for="Madv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenloaitb" class="control-label"></label>
                <select asp-for="Maloai" class="form-control">
                    <option value="">-- Chon Loai thiet bi --</option>
                    @{
                        List<Loaithietbi> loaithietis = ViewBag.DonviLoaithietbiVM.Loaithietbis;
                        foreach (var loaithietbi in loaithietis)
                        {
                            <option value="@loaithietbi.Maloai">@loaithietbi.Tenloai</option>
                        }
                    }
                </select>
                <span asp-validation-for="Maloai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
